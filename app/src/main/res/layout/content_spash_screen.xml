<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_spash_screen"
    tools:context="com.vilakshan.weathermaster.ui.SplashScreen"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/splash_bg">
    <!--Row 0-->
    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:layout_marginTop="?attr/actionBarSize"
        android:textStyle="italic"
        android:textSize="40sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/holo_orange_light"/>
    <!--Row 1-->
    <ImageView
        android:id="@+id/img_Sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/home_sun"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"/>
    <!--Row 2-->
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2"
        >
        <ImageView
            android:id="@+id/img_Cloud"
            android:layout_width="0dp"
            app:layout_columnWeight="0.5"
            android:layout_height="wrap_content"
            tools:src="@drawable/home_cloud"
            android:gravity="center"
            android:scaleType="center"/>
        <ImageView
            android:id="@+id/img_Fog"
            android:layout_width="0dp"
            app:layout_columnWeight="0.5"
            android:layout_height="wrap_content"
            tools:src="@drawable/home_fog"
            android:gravity="center"
            android:scaleType="center"/>
    </android.support.v7.widget.GridLayout>
    <!--Logo-->
    <ImageView
        android:id="@+id/img_Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@mipmap/ic_launcher"
        android:scaleType="center"
        android:layout_gravity="center_horizontal"/>
    <!--Row 4-->
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2"
        >
        <ImageView
            android:id="@+id/img_Rain"
            android:layout_width="0dp"
            app:layout_columnWeight="0.5"
            android:layout_height="wrap_content"
            tools:src="@drawable/home_rain"
            android:gravity="center"
            android:scaleType="center"
            />
        <ImageView
            android:id="@+id/img_Snow"
            android:layout_width="0dp"
            app:layout_columnWeight="0.5"
            android:layout_height="wrap_content"
            tools:src="@drawable/home_snow"
            android:gravity="center"
            android:scaleType="center"
            />
    </android.support.v7.widget.GridLayout>
    <!--Row 5-->
    <ImageView
        android:id="@+id/img_Thunder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:background="@drawable/home_thunder"
        android:scaleType="center"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
