<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/widget_margin"
    android:id="@+id/widget_weather"
    android:background="#66000000"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/widget_weather_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:textSize="@dimen/widget_weather_loc"
            tools:text="New Delhi"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            tools:ignore="UnusedAttribute"
            />
        <ImageView
            android:id="@+id/widget_icon"
            android:layout_width="@dimen/forecast_icon"
            android:layout_height="@dimen/forecast_icon"
            tools:src="@drawable/ic_storm"
            android:adjustViewBounds="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/widget_weather_loc"
            tools:ignore="RtlHardcoded"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/widget_weather_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:textSize="@dimen/widget_weather_desc"
            tools:text="Clouds"
            android:layout_toRightOf="@id/widget_icon"
            tools:ignore="UnusedAttribute"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_weather_temp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/widget_high_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/white"
                android:textSize="@dimen/widget_high_temp"
                tools:text="76o"
                />
            <TextView
                android:id="@+id/widget_low_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/white"
                android:textSize="@dimen/widget_low_temp"
                tools:text="12o"
                />
        </LinearLayout>
    </RelativeLayout>
    </FrameLayout>